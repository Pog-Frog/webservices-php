{
    "name": "omar/vanilla-php-weather-app",
    "require": {
        "guzzlehttp/guzzle": "^7.9"
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        },
        "files": ["config.php"]
    },
    "scripts": {
        "serve": "php -S localhost:8000 -t ."
    }
}